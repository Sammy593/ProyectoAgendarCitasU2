
@model List<AgendarCitasU2.Models.ViewModels.ListEspecialidadViewModel>
@{
    ViewBag.Title = "ESPECIALIDADES";
}

<div class="page-title">
    <div class="title_left">
        <h3>Especialidad <small>Lista de Especialidades registradas</small></h3>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>ESPECIALIDADES <small>Users</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <p class="text-muted font-13 m-b-30">
                    Esta es la lista de Especialidades activos, dar click en info para ver más detalles de una especialidad
                </p>
                <div class="row " style="text-align:right; padding:10px;">
                    <a href="~/Especialidades/Nuevo" class="btn btn-primary"><i class="fa fa-book fa-fw" aria-hidden="true"></i> Nuevo</a>
                </div>
                <table id="especialidad" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>NOMBRE</th>
                            <th>DESCRIPCION</th>
                            <th>FECHA REGISTRO</th>
                            <th>ACCIÓN</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var oElemento in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => oElemento.NOMBRE)</td>
                                <td>@Html.DisplayFor(modelItem => oElemento.DESCRIPCION)</td>
                                <td>@Html.DisplayFor(modelItem => oElemento.FECHAREGISTRO)</td>
                                <td style="text-align:left; ">
                                    <a href="@Url.Action("Editar","Especialidades",new {id = @oElemento.ID})" class="btn btn-success"><i class="fa fa-pencil fa-fw"></i> Editar</a>
                                    <a href="@Url.Action("Eliminar","Especialidades",new {id = @oElemento.ID})" class="btn btn-danger" onclick="return btnEliminar()"><i class="fa fa-trash-o fa-fw"></i> Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            $('#especialidad').DataTable();
        });

        //funcion eliminar btn
        function btnEliminar() {
           var confirmacion = confirm("¿Desea eliminar este Usuario ???");
            if (confirmacion == true) {
                alert("Usuario Eliminado con Éxito !!!");
                return true;

            } else {
                alert("Operación Cancelada :) !!!");
                return false;
            }
           


        }

    </script>
}


@model List<AgendarCitasU2.Models.ViewModels.ListMedicosViewModel>
@{
    ViewBag.Title = "Medicos";
}

<div class="page-title">
    <div class="title_left">
        <h3>Médicos <small>Lista de médicos registrados</small></h3>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">               
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <p class="text-muted font-13 m-b-30">
                    
                </p>
                <div class="row " style="text-align:right; padding:10px;">
                    <a href="~/Medicos/Nuevo" class="btn btn-primary"><i class="fa fa-pencil fa-fw"></i>Nuevo</a>
                </div>
                <table id="pacientes" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>DNI</th>
                            <th>NOMBRES</th>
                            <th>APELLIDOS</th>
                            <th>CORREO</th>
                            <th>USERNAME</th>
                            <th>ACCIÓN</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.DNI)</td>
                                <td>@Html.DisplayFor(modelItem => item.NOMBRES)</td>
                                <td>@Html.DisplayFor(modelItem => item.APELLIDOS)</td>
                                <td>@Html.DisplayFor(modelItem => item.CORREO)</td>
                                <td>@Html.DisplayFor(modelItem => item.USERNAME)</td>
                                <td>
                                    <a href="@Url.Action("Editar","Medicos",new {id = item.ID})" class="btn btn-default"> Modificar </a>
                                    <a onclick="return confirmar()" href="@Url.Action("Eliminar","Medicos",new {id = item.ID})" class="btn btn-danger"> Eliminar </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            $('#pacientes').DataTable();
        });

    </script>
    <script type='text/javascript'>
        function confirmar() {
            var respuesta = confirm("Desea eliminar?")
            if (respuesta == true) {
                return true;
            } else {
                return false;
            }
        }
    </script>
}

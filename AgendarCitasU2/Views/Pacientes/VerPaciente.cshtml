@model AgendarCitasU2.Models.ViewModels.PacienteFullViewModel
@{
    ViewBag.Title = "Paciente";
}

<style>
    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }
</style>


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="page-title">
            <div class="title_left">
                <h3>
                    Datos de paciente
                    @Html.DisplayTextFor(d => d.nombresP)
                    @Html.DisplayTextFor(d => d.apellidosP)
                </h3>
            </div>
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <div class="row gutters-sm">
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <div class="mt-3">
                                            <h4>
                                                @Html.DisplayTextFor(d => d.nombresP)
                                                @Html.DisplayTextFor(d => d.apellidosP)
                                            </h4>
                                            <p class="text-secondary mb-1">DNI - @Html.DisplayTextFor(d => d.dniP)</p>
                                            <button class="btn btn-primary">Editar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-2 text-primary">
                                            <h5 class="mb-0">Direccion</h5>
                                        </div>
                                        <div class="col-sm-4 text-secondary">
                                            @Html.DisplayTextFor(d => d.direccionP)
                                        </div>
                                        <div class="col-sm-2 text-primary">
                                            <h5 class="mb-0">Sexo</h5>
                                        </div>
                                        <div class="col-sm-4 text-secondary">
                                            @Html.DisplayTextFor(d => d.sexoP)
                                        </div>

                                    </div>
                                    
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-2 text-primary">
                                            <h5 class="mb-0">Fecha de nacimiento</h5>
                                        </div>
                                        <div class="col-sm-4 text-secondary">
                                            @Html.DisplayTextFor(d => d.fNacP)
                                        </div>

                                        <div class="col-sm-2 text-primary">
                                            <h5 class="mb-0">Fecha de modificacion</h5>
                                        </div>
                                        <div class="col-sm-4 text-secondary">
                                            @Html.DisplayTextFor(d => d.fModP)
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-2 text-primary">
                                            <h5 class="mb-0">Teléfono</h5>
                                        </div>
                                        <div class="col-sm-4 text-secondary">
                                            @Html.DisplayTextFor(d => d.telefonoP)
                                        </div>
                                        <div class="col-sm-2 text-primary">
                                            <h5 class="mb-0">Fecha de registro</h5>
                                        </div>
                                        <div class="col-sm-4 text-secondary">
                                            @Html.DisplayTextFor(d => d.fRegP)
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-2 text-primary">
                                            <h5 class="mb-0">Registro</h5>
                                        </div>
                                        <div class="col-sm-4 text-secondary">
                                            @Html.DisplayTextFor(d => d.userRegP)
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-2 text-primary">
                                            <h5 class="mb-0">Modificacion</h5>
                                        </div>
                                        <div class="col-sm-4 text-secondary">
                                            @Html.DisplayTextFor(d => d.userModP)
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-2 text-primary">
                                            <h5 class="mb-0">Estado</h5>
                                        </div>
                                        <div class="col-sm-4 text-secondary">
                                            @Html.DisplayTextFor(d => d.activoP)
                                        </div>
                                    </div>
                                    <hr>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>